{% extends "../../../common/layout.twig" %}

{% block content %}
    <!-- Exercise 1 Content -->
    <div class="container-fluid top-space">
        <!-- Title & Description -->
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <h1 class="display-4">Упражнение 3</h1>
                <hr>
                <p class="lead">Complete the sentences with the past simple (affirmative / negative / interrogative) of the verbs in brackets:</p>
                <p>Ex: I <strong>(meet)</strong> him yesterday – I met him yesterday – I didn’t meet him yesterday – Did I meet him yesterday?</p>
            </div>
        </div>
        <!-- Exercise content -->
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <form>
                    <ol>
                        <li>
                            <div class="form-group">
                                <label for="question_1">My brother and his wife <strong>(come)</strong> from Germany.</label>
                                <input type="text" class="form-control" id="question_1" name="question_1" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_2">I <strong>(like)</strong> working on the project.</label>
                                <input type="text" class="form-control" id="question_2" name="question_2" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_3">My PM <strong>(phone)</strong> from the office yesterday evening.</label>
                                <input type="text" class="form-control" id="question_3" name="question_3" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_4">On Monday Vasya <strong>(go)</strong> to work on foot.</label>
                                <input type="text" class="form-control" id="question_4" name="question_4" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_5">They <strong>(finish)</strong> work last Saturday.</label>
                                <input type="text" class="form-control" id="question_5" name="question_5" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_6">You <strong>(enjoy)</strong> the film.</label>
                                <input type="text" class="form-control" id="question_6" name="question_6" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_7">They <strong>(leave)</strong> the office at 6.</label>
                                <input type="text" class="form-control" id="question_7" name="question_7" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_8">We <strong>(use)</strong> JS for this particular case.</label>
                                <input type="text" class="form-control" id="question_8" name="question_8" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_9">I <strong>(have)</strong> such thoughts when working with him.</label>
                                <input type="text" class="form-control" id="question_9" name="question_9" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_10">Many years it <strong>(be)</strong> very difficult to live without the Internet.</label>
                                <input type="text" class="form-control" id="question_10" name="question_10" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_11">Last years they <strong>(buy)</strong> new equipment from Cisco.</label>
                                <input type="text" class="form-control" id="question_11" name="question_11" placeholder="Enter correct form">
                            </div>
                        </li>
                        <li>
                            <div class="form-group">
                                <label for="question_12">I <strong>(see)</strong> him the day before yesterday.</label>
                                <input type="text" class="form-control" id="question_12" name="question_12" placeholder="Enter correct form">
                            </div>
                        </li>
                    </ol>
                    <!-- Submit & Back buttons -->
                    <div class="row justify-content-between">
                        <div class="col-lg-4 order-lg-1 d-none d-lg-block text-center">
                            <a href="homework_4.html" class="btn btn-block btn-outline-dark py-3 my-4">Назад</a>
                        </div>
                        <div class="col-12 order-12 d-block d-lg-none text-center">
                            <a href="homework_4.html" class="btn btn-block btn-outline-dark py-3 my-4">Назад</a>
                        </div>
                        <div class="col-lg-4 order-lg-12 d-none d-lg-block text-center">
                            <button type="submit" class="btn btn-block btn-outline-success py-3 my-4" data-toggle="modal" data-target="#urlModal">Сдать</button>
                        </div>
                        <div class="col-12 order-1 d-block d-lg-none text-center">
                            <button type="submit" class="btn btn-block btn-outline-success py-3 my-4" data-toggle="modal" data-target="#urlModal">Сдать</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Modal -->
            {% include "../../../common/modal.twig" %}
        </div>
    </div>
{% endblock %}
