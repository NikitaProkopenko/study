{% extends "../../../common/layout.twig" %}

{% block content %}
    <!-- Exercise 1 Content -->
    <div class="container-fluid top-space">
        <!-- Title & Description -->
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <h1 class="display-4">Упражнение 1</h1>
                <hr>
                <p class="lead">Put the verb into the correct form:</p>
            </div>
        </div>
        <!-- Exercise content -->
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <form>
                    <ol>
                        <li>
                            <div class="form-group">
                                <label for="question_1">She <strong>(make)</strong> sandwiches in the kitchen.</label>
